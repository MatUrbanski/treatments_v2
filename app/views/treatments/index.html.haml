.row
  .col-lg-12
    %h1.page-header= t('.title')
= render "shared/search_form", url: treatments_path, placeholder: t('.search_placeholder')
%table.table.table-striped.table-bordered.table-hover.table-condensed
  %thead
    %tr
      %th= Treatment.human_attribute_name :patient
      %th= Treatment.human_attribute_name :doctor
      %th= Treatment.human_attribute_name :treatment_type
      %th= Treatment.human_attribute_name :medicine
      %th= Treatment.human_attribute_name :visitation_times
      %th= Treatment.human_attribute_name :options
  %tbody#treatments
    = render @treatments
.pagination
  = paginate @treatments, remote: true
= link_to t('.new_treatment'), [:new, :treatment], class: 'btn btn-primary'
