%tr
  %td= treatment_type.name
  %td= treatment_type.treatment_types_group_name
  %td= treatment_type.treatments_count
  %td
    .dropdown
      %button.btn.btn-info.btn-sm{"aria-expanded" => "true",
      "data-toggle" => "dropdown", :type => "button"}
        = TreatmentType.human_attribute_name :options
        %span.caret
      %ul.dropdown-menu
        %li
          = link_to t('.edit_treatment_type'),
            [:edit, treatment_type]
        %li
          = link_to t('.destroy_treatment_type'), treatment_type,
            method: :delete, data: { confirm: "#{t('are_you_sure')}" }
