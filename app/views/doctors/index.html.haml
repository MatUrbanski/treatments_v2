.row
  .col-lg-12
    %h1.page-header= t('.title')
= render "shared/search_form", url: doctors_path, placeholder: t('.search_placeholder')
%table.table.table-striped.table-bordered.table-hover.table-condensed
  %thead
    %tr
      %th= Doctor.human_attribute_name :fullname
      %th= Doctor.human_attribute_name :specialization
      %th= Doctor.human_attribute_name :ordering_unit
      %th= Doctor.human_attribute_name :treatments_count
      %th= Doctor.human_attribute_name :options
  %tbody#doctors
    = render @doctors
.pagination
  = paginate @doctors, remote: true
= link_to t('.new_doctor'), [:new, :doctor], class: 'btn btn-primary'