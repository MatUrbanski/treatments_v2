%tr.ordering_unit
  %td= doctor.fullname
  %td= doctor.specialization
  %td= doctor.ordering_unit_name
  %td= doctor.treatments_count
  %td
    .dropdown
      %button.btn.btn-info.btn-sm{"aria-expanded" => "true",
      "data-toggle" => "dropdown", :type => "button"}
        = OrderingUnit.human_attribute_name :options
        %span.caret
      %ul.dropdown-menu
        %li
          = link_to t('.edit_doctor'),
            [:edit, doctor]
        %li
          = link_to t('.destroy_doctor'), doctor,
            method: :delete, data: { confirm: "#{t('are_you_sure')}" }
